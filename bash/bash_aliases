alias   j=jobs
alias   vi=vim
alias   more=less

alias   ll="ls -alF"

alias   rm="rm -i"
alias   cp="cp -i"
alias   mv="mv -i"

alias   s="screen"
alias   scd="screen -d"
alias   scr="screen -r"
alias   scl="screen -ls"
alias   scw="screen -w"

alias	g=git
alias	gst="git status"
alias	gbr="git branch"
alias	gco="git checkout"
alias	gcom="git checkout master"
alias   gs="git stash"
alias   gsl="git stash list"
alias   gfrbm="git fetch && git rebase origin/master"
alias   gdm="git diff master"
alias   gl1="git log -1"

alias   d="docker"
alias   dc="docker-compose"
alias   trr="traceroute"
alias   p="ping"
alias   f="fping -l"
alias   u="uptime"
alias   t="telnet"
alias   td="tcpdump -nnn"
alias   ap="arping"

alias	alu="apt list --upgradable"
alias	aup="apt update"
alias	aug="apt upgrade"

alias	sshp="ssh -o PasswordAuthentication=yes -o PubkeyAuthentication=no"
alias	sshk="ssh -o PasswordAuthentication=no -o PubkeyAuthentication=yes"

alias timestamp="date '+%Y%m%d%H%M'"

export EDITOR=vim
export PAGER=less

